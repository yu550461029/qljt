<div class="row">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">部门名称：<%=@team.name%></h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6"><h4>部门描述:</h4><%=@team.desc%></div>
        <div class="col-md-6"><h4>部门人数:</h4><%=@team.desc%></div>
      </div>
      <div class="row">
        <div class="col-md-6">部门得分</div>
        <div class="col-md-6">部门最高分</div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">岗位列表</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>id</th>
            <th>岗位名称</th>
            <th>岗位权重描述</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @positions.each do |position| %>
            <tr>
              <th scope="row"><%=position.id%></th>
              <td><%=position.name%></td>
              <td><%=position.weight%></td>
              <td>
                <button type="button" class="btn btn-default" onclick="window.location.href='/teams/position?position_id=<%=position.id%>'">查看</button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">得分明细：<%=@team.name%></h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6"><h4>部门描述:</h4><%=@team.desc%></div>
        <div class="col-md-6"><h4>部门人数:</h4><%=@team.desc%></div>
      </div>
      <div class="row">
        <div class="col-md-6">部门得分</div>
        <div class="col-md-6">部门最高分</div>
      </div>
    </div>
  </div>
</div>
